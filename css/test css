/* Barra nueva de nav*/
#navbar ul {    
    list-style:none;
    font-size: 0;
    /* IMPORTANTE */
    padding: 0;
  }
#navbar  li {
    display: inline-block;
    width: 25%;
  
    
     /* IMPORTANTE */
     position:relative;
  }
#navbar   a {
    font-size: 14px;
    text-align: center;
    display: block;
    color: white;
    background-color: #b2ba86;
    padding: 10px;
    text-transform: uppercase;
    text-decoration: none;
  }
#navbar   a:hover {
    background-color: rgb(57, 92, 47);
  }
  
#navbar   ul ul { /* si un ul es padre de otro ul entonces... esto seria el submenu */
    
     /* IMPORTANTE */
     position: absolute;
     display: none; 
  }
#navbar   ul ul li { /* los LI dentro del submenu, esta propiedad logra que ocupe todo lo que pueda */
    width: 100%;
  }
  
  /* Al pasar sobre los LI, si tiene un UL, se MOSTRARA */
#navbar   ul li:hover ul {
     display:block;
  }
  
#navbar   ul li:hover ul a:hover {
    background-color: rgb(57, 92, 47) 
  }


